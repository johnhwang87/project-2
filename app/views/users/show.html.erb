<%= render "layouts/header" %>

<div class="container">

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3>Welcome <%= @user.name %>!</h3> <hr/>

<ul class="nav nav-tabs">
    <li><a href="#tab1" data-toggle="tab">Profile</a></li>
    <li><a href="#tab2" data-toggle="tab">Messages</a></li>
    <li><a href="#tab3" data-toggle="tab">Jam Sessions</a></li>
    <li><a href="#ddd" data-toggle="tab">Search</a></li>
</ul>

    <div class="tab-content">
        <div class="tab-pane active" id="tab1">

            <%= form_for @user do |f| %>
            <img style="height: 200px;" src="<%= @user.image %>">
            <p><%= f.label :name %><br><%= @user.name %></p>
            <p><%= f.label :age %><br><%= @user.age %></p>
            <p><%= f.label :talent %><br><%= @user.talent %></p>
            <p><%= f.label :experience %><br><%= @user.experience %></p>
            <p><%= f.label :influences %><br><%= @user.influences %></p>
            <p><%= f.label :location %><br><%= @user.location %></p>
            <p><%= f.label :email %><br><%= @user.email %></p>

            <button type="button" class="btn btn-info btn-xs"><%= link_to "Edit Profile", edit_user_path %></button>

            <% end %>
        </div>

        <div class="tab-pane" id="tab2">
          <%= form_for @jam, url: create_jam_path do |f| %>

          <%= f.label :location  %>
          <%= f.text_field :location  %>

          <%= f.label :time  %>
          <%= f.text_field :time  %>

          <%= f.submit "Create JamSession", "class" => "btn btn-info btn" %>

          <%end%>


        </div>

        <div class="tab-pane" id="tab3">
          CONTENT 3
        </div>

        <div class="tab-pane" id="tab4">
          CONTENT 4
        </div>

    </div>

    </div>
  </div>
</div>


</div>
<h3 id="ddd"><%= link_to 'Search for Jammates', search_path %></h3>

<br>


