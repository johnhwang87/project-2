<%= render "layouts/header" %>
<div class="container">
<h3>Edit Profile</h3>
<%= form_for @user do |g|  %>
<form>

  <fieldset class="form-group">
    <%= g.label :name, class: "titles" %> <br>
    <%= g.text_field :name, "placeholder" => "Name", :size => 60 %>
  </fieldset>

  <fieldset class="form-group">
    <%= g.label :age, class: "titles" %> <br>
    <%= g.text_field :age, "placeholder" => "Age", :size => 60 %>
  </fieldset>

  <fieldset class="form-group">
    <%= g.label :image, class: "titles" %> <br>
    <%= g.text_field :image, "placeholder" => "Paste Image URL", :size => 60 %>
  </fieldset>

  <fieldset class="form-group">
    <%= g.label :talent, class: "titles" %> <br>
    <%= g.text_field :talent, "placeholder" => "List of Talents", :size => 60 %>
  </fieldset>

  <fieldset class="form-group">
    <%= g.label :influences, class: "titles" %> <br>
    <%= g.text_field :influences, "placeholder" => "Name of Bands", :size => 60 %>
  </fieldset>

  <fieldset class="form-group">
    <%= g.label :experience, class: "titles" %> <br>
    <%= g.text_field :experience, "placeholder" => "Skill Level, i.e. Beginnier, Intermediate, Advanced", :size => 60 %>
  </fieldset>

   <fieldset class="form-group">
    <%= g.label :location, class: "titles" %> <br>
    <%= g.text_field :location, "placeholder" => "City", :size => 60 %>
  </fieldset>

   <fieldset class="form-group">
    <%= g.label :email, class: "titles" %> <br>
    <%= g.text_field :email, "placeholder" => "Email", :size => 60 %>
  </fieldset>


  <%= g.submit "Update Profile", "class" => "btn btn-success btn-xs" %>



  <% end %>
</form>
</div>
<%= render "layouts/footer" %>
